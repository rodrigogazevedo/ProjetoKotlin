<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/itemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:background="@drawable/customborder_movielist">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#808080">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/poster_id"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/annabelle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tituloTV"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@id/poster_id"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Annabelle" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>